<PanelContainer
        xmlns="https://spacestation14.io"
        xmlns:cc="clr-namespace:Content.Client._DV.Administration.UI"
        StyleClasses="BackgroundDark"
        HorizontalExpand="True"
        Margin="4">
    <BoxContainer Orientation="Vertical">
        <CheckBox Name="Department"/> <!-- Toggles all jobs in the department at once -->
        <BoxContainer Name="JobsContainer" Orientation="Vertical" Margin="20 0 0 0"/> <!-- Populated with each job to toggle individually-->
    </BoxContainer>
</PanelContainer>
